  <body>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  <br />
  <br />
  <br />
  <div class="footer">
    <ul class="nav">
      <li><%= link_to 'https://www.facebook.com/CobblestoneIndustriesInc/' do %><span class="fab fa-facebook">Visit us on Facebook!</span>
        <% end %></li>
      <li>Admin</li>
    </ul>
  </div> 

  </body>
</html>
